{
  "manifest_version": 3,
  "name": "PoE2 Merchant History",
  "version": "0.1.0",
  "description": "PoE2の売上履歴をリーグ別に保存し、グラフと表で表示します。",
  "permissions": ["storage", "cookies"],
  "host_permissions": ["https://jp.pathofexile.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "PoE2 Merchant History"
  },
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
